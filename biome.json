{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"includes": ["app/**", "components/**", "lib/**", "data/**", "hooks/**", "i18n/**", "messages/**"]
	},
	"formatter": {
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
